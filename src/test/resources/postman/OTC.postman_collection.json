		{
			"name": "addTarget",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "208d40dd-1c42-403d-a3d6-2dfe79b38a13",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"var jsonData = JSON.parse(responseBody);",
							"",
							"pm.test(jsonData.amount ,function() {",
							"    pm.expect(jsonData.amount).equal(42);",
							"});",
							"",
							"pm.test(jsonData.distance ,function() {",
							"    pm.expect(jsonData.distance).equal(142);",
							"});",
							"",
							"pm.test(jsonData.duration ,function() {",
							"    pm.expect(jsonData.duration).equal('WEEK');",
							"});",
							"",
							"pm.test(jsonData.targetBegin.year ,function() {",
							"    pm.expect(jsonData.targetBegin.year).equal(2018);",
							"});",
							"pm.test(jsonData.targetBegin.month ,function() {",
							"    pm.expect(jsonData.targetBegin.month).equal('DECEMBER');",
							"});",
							"pm.test(jsonData.targetBegin.dayOfMonth ,function() {",
							"    pm.expect(jsonData.targetBegin.dayOfMonth).equal(24);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
