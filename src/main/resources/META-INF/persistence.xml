<?xml version="1.0" encoding="UTF-8"?>
<persistence
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    version="2.1"
    xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    
  <persistence-unit name="mariadb" transaction-type="JTA">
    <jta-data-source>java:/ServiceDS</jta-data-source>
    <class>ch.opentrainingcenter.otc.training.domain.Sport</class>
    <class>ch.opentrainingcenter.otc.training.domain.TrainingGoal</class>
    <properties>
      <property name="javax.persistence.schema-generation.database.action" value="validate"/>
      <property name="javax.persistence.schema-generation.create-source" value="metadata"/>
      <property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
    </properties>
  </persistence-unit>
  
</persistence>